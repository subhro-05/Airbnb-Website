<% layout("/layouts/boilerPlate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Listings</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listings[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good</div>
                    <div class="invalid-feedback">Please Enter your Title</div>
                </div>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listings[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Description Looks Good</div>
                    <div class="invalid-feedback">Please Enter your description</div>
                </div>

                <div class="mb-3">
                    <h6>Original Image</h6> <br/>
                    <img src="<%= originalImageUrl %>" class="card-img-top show-img" alt="listing_image"/>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listings[image]" type="file" class="form-control">
                    <div class="valid-feedback">Image Looks Good</div>
                    <div class="invalid-feedback">Please Enter your Image</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listings[price]" value="<%= listing.price %>" type="number" class="form-control" required>
                        <div class="valid-feedback">Price Looks Good</div>
                    <div class="invalid-feedback">Please Enter your Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listings[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                        <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Please Enter your Country</div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input name="listings[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Please Enter your Location</div>
                </div>
                <br/>
                <button class="btn btn-dark edit-btn mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>
